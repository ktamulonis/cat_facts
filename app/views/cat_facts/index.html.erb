<h1>Cat Facts</h1>
<p>Add a new cat fact:</p>
<%= form_for @cat_fact do |f| %>
    <%= f.label :fact %><br>
    <%= f.text_area :fact %><br>
    <%= f.submit %>
<% end %>

<h3>Previous Facts:</h3>
<ul>
    <% @cat_facts.each do |cat_fact| %>
        <li><%= cat_fact.fact %></li>
    <% end %>
</ul>
